@page
@using Auditor.Models.EnumModels
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage"/>
<div class="col-12">
    <form id="profile-form" method="post">
        <div class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body px-lg-5 pt-3">
                            <h3 class="col-12 text-info text-center py-2">
                                @ViewData["Title"]
                            </h3>
                            <hr/>
                            <div class="py-2">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" disabled/>

                            </div>
                            <div class="row py-2">
                                <div class="col-6">
                                    <div>
                                        <input asp-for="Input.Nombres" placeholder="Nombres" class="form-control"/>
                                        <span asp-validation-for="Input.Nombres" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div>
                                        <input asp-for="Input.Apellidos" placeholder="Apellidos" class="form-control"/>
                                        <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="py-2">
                                <label>Fecha de Nacimiento</label>
                                <input type="date" asp-for="Input.FechaNacimiento" class="form-control" placeholder="Fecha de Nacimiento"/>
                                <span asp-validation-for="Input.FechaNacimiento" class="text-danger"></span>
                            </div>
                            <div class="py-2">
                                <label>Tipo de Documento</label>
                                <select asp-for="Input.TipoIdentificacion" placeholder="Nombres" class="form-control">
                                    <option value="0">-- Seleccione --</option>
                                    <option value="@TipoIdentificacion.Cedula">Cédula</option>
                                    <option value="@TipoIdentificacion.Pasaporte">Pasaporte</option>
                                </select>
                                <span asp-validation-for="Input.TipoIdentificacion" class="text-danger"></span>
                            </div>
                            <div class="py-2">
                                <input asp-for="Input.NumeroIdentificacion" placeholder="Número de Documento" class="form-control"/>
                                <span asp-validation-for="Input.NumeroIdentificacion" class="text-danger"></span>
                            </div>
                            <div class="row py-2">
                                <div class="col-6">
                                    <input asp-for="Input.TelefonoMovil" placeholder="Teléfono Celular" class="form-control"/>
                                    <span asp-validation-for="Input.TelefonoMovil" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <input asp-for="Input.TelefonoFijo" placeholder="Teléfono Fijo" class="form-control"/>
                                    <span asp-validation-for="Input.TelefonoFijo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="py-2">
                                <button id="update-profile-button" type="submit" class="btn btn-success form-control">
                                    <i class="far fa-save"></i>
                                    Guardar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}