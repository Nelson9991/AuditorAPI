@using System.Security.Claims
@inherits LayoutComponentBase

<Layout Sider="true">
    <LayoutSider>
        <LayoutSiderContent>
            <Bar
                Mode="BarMode.VerticalInline"
                CollapseMode="BarCollapseMode.Small"
                Breakpoint="Breakpoint.Desktop"
                NavigationBreakpoint="Breakpoint.Tablet"
                ThemeContrast="ThemeContrast.Dark"
                Background="Background.Dark"
                @ref="_sideBar">
                <BarBrand>
                    <BarItem>
                        <BarLink To="/">
                            <BarIcon IconName="IconName.Dashboard"/>
                            Auditor SHT
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarMenu>
                    <BarStart>
                        <BarItem>
                            <AuthorizeView>
                                <Authorized>
                                    <BarLink To="Identity/Account/Manage">
                                        <BarIcon IconName="IconName.UserCircle"></BarIcon>
                                        @context.User.FindFirst(x => x.Type == ClaimTypes.GivenName)?.Value
                                    </BarLink>
                                </Authorized>
                                <NotAuthorized>
                                    <BarLink>
                                        <BarIcon IconName="IconName.UserCircle"></BarIcon>
                                        Anónimo
                                    </BarLink>
                                </NotAuthorized>
                            </AuthorizeView>
                            <Divider Class="mx-2 my-2"/>
                        </BarItem>
                        <BarItem>
                            <BarLink To="#home">
                                <BarIcon IconName="IconName.Home"/>
                                Home
                            </BarLink>
                        </BarItem>
                        <BarItem>
                            <BarDropdown>
                                <BarDropdownToggle>
                                    <BarIcon IconName="IconName.Edit"/>
                                    Dropdown
                                </BarDropdownToggle>
                                <BarDropdownMenu>
                                    <BarDropdownItem>Action</BarDropdownItem>
                                    <BarDropdownItem>Another action</BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                    </BarStart>
                </BarMenu>
            </Bar>

        </LayoutSiderContent>
    </LayoutSider>
    <Layout>
        <LayoutHeader Fixed="true">
            <Bar
                Mode="@BarMode.Horizontal"
                Breakpoint="Breakpoint.Desktop"
                Background="Background.Light"
                ThemeContrast="ThemeContrast.Light">
                <BarBrand>
                    <BarToggler Bar="@_sideBar"/>
                </BarBrand>
                <BarToggler Mode="@BarTogglerMode.Normal"/>
                <BarMenu>
                    <BarStart>
                    </BarStart>
                    <BarEnd>
                        <BarItem Class="d-flex flex-row">
                            <LoginDisplay/>
                        </BarItem>
                    </BarEnd>
                </BarMenu>
            </Bar>
        </LayoutHeader>
        <LayoutContent>
            <div class="px-4 pb-5 pt-3">
                @Body
            </div>
        </LayoutContent>
    </Layout>
</Layout>

@code {

    private Bar _sideBar;

}